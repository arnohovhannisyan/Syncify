{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "IProfile": {
            "additionalProperties": false,
            "properties": {
                "branch": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "Syncer": {
            "enum": [
                "file",
                "repo"
            ],
            "type": "string"
        }
    },
    "properties": {
        "autoUploadDelay": {
            "type": "number"
        },
        "file": {
            "additionalProperties": false,
            "properties": {
                "path": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "forceDownload": {
            "type": "boolean"
        },
        "forceUpload": {
            "type": "boolean"
        },
        "hostname": {
            "type": "string"
        },
        "ignoredItems": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "removeExtensions": {
            "type": "boolean"
        },
        "repo": {
            "additionalProperties": false,
            "properties": {
                "currentProfile": {
                    "type": "string"
                },
                "profiles": {
                    "items": {
                        "$ref": "#/definitions/IProfile"
                    },
                    "type": "array"
                },
                "url": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "syncOnStartup": {
            "type": "boolean"
        },
        "syncer": {
            "$ref": "#/definitions/Syncer"
        },
        "watchSettings": {
            "type": "boolean"
        }
    },
    "type": "object"
}

