{
	"name": "syncify",
	"displayName": "Syncify",
	"publisher": "arnohovhannisyan",
	"description": "A reliable way of syncing your VSCode settings and extensions",
	"license": "MIT",
	"version": "4.0.4",
	"main": "./dist/main.js",
	"scripts": {
		"start": "webpack --config .webpack/development.ts --watch",
		"build": "webpack --config .webpack/production.ts",
		"test": "jest",
		"lint": "xo 'src/**/*'",
		"schema": "typescript-json-schema tsconfig.json LocalSettings -o assets/settings.schema.json --noExtraProps",
		"vscode:prepublish": "yarn schema && yarn build"
	},
	"dependencies": {
		"fast-glob": "^3.2.4",
		"fs-extra": "^9.0.1",
		"jsonc-pragma": "^1.0.7",
		"node-fetch": "^2.6.0",
		"simple-git": "^2.14.0"
	},
	"devDependencies": {
		"@types/fs-extra": "^9.0.1",
		"@types/jest": "^26.0.5",
		"@types/lodash": "^4.14.158",
		"@types/node": "^14.0.24",
		"@types/node-fetch": "^2.5.7",
		"@types/terser-webpack-plugin": "^3.0.0",
		"@types/vscode": "1.47.0",
		"@types/webpack": "^4.41.21",
		"@types/webpack-merge": "^4.1.5",
		"awesome-typescript-loader": "^5.2.1",
		"clean-webpack-plugin": "^3.0.0",
		"codecov": "^3.7.2",
		"eslint-plugin-jest": "^23.18.0",
		"eslint-plugin-prettier": "^3.1.4",
		"jest": "^26.1.0",
		"ovsx": "^0.1.0-next.9b4e999",
		"prettier": "^2.0.5",
		"terser-webpack-plugin": "^3.0.6",
		"ts-jest": "^26.1.2",
		"ts-loader": "^8.0.0",
		"ts-node": "^8.10.2",
		"typescript": "^3.9.7",
		"typescript-json-schema": "^0.42.0",
		"vsce": "^1.77.0",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.12",
		"webpack-merge": "^5.0.9",
		"xo": "^0.32.1"
	},
	"engines": {
		"vscode": "^1.47.0"
	},
	"icon": "assets/logo.png",
	"homepage": "https://github.com/arnohovhannisyan/vscode-syncify",
	"repository": {
		"type": "git",
		"url": "https://github.com/arnohovhannisyan/vscode-syncify"
	},
	"bugs": {
		"url": "https://github.com/arnohovhannisyan/vscode-syncify/issues",
		"email": "arnohovhannisyan0@gmail.com"
	},
	"extensionKind": [
		"ui"
	],
	"categories": [
		"Other"
	],
	"keywords": [
		"sync",
		"vscode-sync",
		"settings-sync",
		"syncify",
		"vscode-syncify"
	],
	"activationEvents": [
		"*"
	],
	"contributes": {
		"commands": [
			{
				"command": "syncify.upload",
				"title": "%(command) upload%",
				"category": "Syncify"
			},
			{
				"command": "syncify.download",
				"title": "%(command) download%",
				"category": "Syncify"
			},
			{
				"command": "syncify.reset",
				"title": "%(command) reset%",
				"category": "Syncify"
			},
			{
				"command": "syncify.openSettings",
				"title": "%(command) openSettings%",
				"category": "Syncify"
			},
			{
				"command": "syncify.reinitialize",
				"title": "%(command) reinitialize%",
				"category": "Syncify"
			},
			{
				"command": "syncify.registerCustomFile",
				"title": "%(command) registerCustomFile%",
				"category": "Syncify"
			},
			{
				"command": "syncify.importCustomFile",
				"title": "%(command) importCustomFile%",
				"category": "Syncify"
			},
			{
				"command": "syncify.switchProfile",
				"title": "%(command) switchProfile%",
				"category": "Syncify"
			},
			{
				"command": "syncify.resolveConflict",
				"title": "%(command) resolveConflict%",
				"category": "Syncify",
				"icon": "$(check)"
			}
		],
		"jsonValidation": [
			{
				"fileMatch": "arnohovhannisyan.syncify/settings.json",
				"url": "./assets/settings.schema.json"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "syncify.registerCustomFile",
					"when": "!explorerResourceIsFolder"
				},
				{
					"command": "syncify.importCustomFile",
					"when": "explorerResourceIsFolder"
				}
			],
			"editor/title": [
				{
					"when": "resourceFilename =~ /^syncify-conflict:/",
					"command": "syncify.resolveConflict",
					"group": "navigation"
				}
			]
		}
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/src/tests/"
		],
		"moduleNameMapper": {
			"^~/(.*)": "<rootDir>/src/$1"
		},
		"globalTeardown": "<rootDir>/src/tests/teardown.ts"
	},
	"xo": {
		"prettier": true,
		"extends": [
			"plugin:jest/recommended",
			"plugin:jest/style"
		]
	}
}
