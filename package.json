{
  "name": "syncify",
  "displayName": "Syncify",
  "publisher": "arnohovhannisyan",
  "description": "Sync your settings and extensions across multiple machines",
  "license": "MIT",
  "version": "1.3.0",
  "engines": {
    "vscode": "^1.35.0"
  },
  "icon": "assets/logo.png",
  "homepage": "https://github.com/arnohovhannisyan/Syncify",
  "repository": {
    "type": "git",
    "url": "https://github.com/arnohovhannisyan/Syncify"
  },
  "bugs": {
    "url": "https://github.com/arnohovhannisyan/Syncify/issues",
    "email": "arnohovhannisyan0@gmail.com"
  },
  "extensionKind": "ui",
  "categories": [
    "Other"
  ],
  "keywords": [
    "sync",
    "vscode-sync",
    "settings-sync",
    "syncify"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/main.js",
  "contributes": {
    "commands": [
      {
        "command": "syncify.sync",
        "title": "%cmd(syncify.sync).name%"
      },
      {
        "command": "syncify.upload",
        "title": "%cmd(syncify.upload).name%"
      },
      {
        "command": "syncify.download",
        "title": "%cmd(syncify.download).name%"
      },
      {
        "command": "syncify.reset",
        "title": "%cmd(syncify.reset).name%"
      },
      {
        "command": "syncify.openSettings",
        "title": "%cmd(syncify.openSettings).name%"
      },
      {
        "command": "syncify.otherOptions",
        "title": "%cmd(syncify.otherOptions).name%"
      },
      {
        "command": "syncify.registerCustomFile",
        "title": "%cmd(syncify.registerCustomFile).name%"
      },
      {
        "command": "syncify.importCustomFile",
        "title": "%cmd(syncify.importCustomFile).name%"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "arnohovhannisyan.syncify/settings.json",
        "url": "./assets/settings.schema.json"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "syncify.registerCustomFile",
          "when": "!explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn generate:schema && webpack --config .webpack/production.js",
    "compile": "webpack --config .webpack/development.js",
    "watch": "webpack --config .webpack/development.js --watch",
    "postinstall": "yarn vscode:types",
    "postuninstall": "yarn vscode:types",
    "lint": "tslint -c ./tslint.json -p .",
    "test": "jest",
    "vscode:types": "node ./node_modules/vscode/bin/install",
    "exec": "exec",
    "generate:schema": "typescript-json-schema tsconfig.json ISettings -o assets/settings.schema.json",
    "tag:release": "git tag"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.136",
    "@types/micromatch": "^3.1.0",
    "@types/node": "^12.6.8",
    "@types/node-fetch": "^2.3.7",
    "@types/recursive-readdir": "^2.2.0",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3",
    "typescript-json-schema": "^0.38.3",
    "vsce": "^1.65.0",
    "vscode": "^1.1.35",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6"
  },
  "dependencies": {
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.14",
    "micromatch": "^4.0.2",
    "node-fetch": "^2.6.0",
    "recursive-readdir": "^2.2.2",
    "simple-git": "^1.121.0",
    "vscode-chokidar": "^2.1.7"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
