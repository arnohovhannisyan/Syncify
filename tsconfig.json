{
	"compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"~/*": ["./*"]
		},
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"module": "CommonJS",
		"target": "ES5",
		"lib": ["ESNext"],
		"strict": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/__mocks__/**/*"]
}
