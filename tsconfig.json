{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "outDir": "out",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "rootDirs": ["src", "assets"],
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["src/**/index.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "**/__mocks__/**/*.ts"]
}
